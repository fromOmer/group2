
extends layout

block topContent
  meta(charset='UTF-8')
  link(rel='stylesheet' href='/CSS/new_profile.css')
  script(defer='' src='/JS/user profile.js')
  .mainForm
    .user-profile
      label.user-icon
        i.fa-solid.fa-user
      .profile-items
        h1= variable1
        p= variable3
        h2= variable4
        table
          tr
            th Time
            th Day
            th Coacher Name
            th Training Name
          each training in variable5
            tr
              td #{training.time}
              td #{training.day}
              td #{training.coacherName}
              td #{training.trainingName}
      .button-container
        button.button(id='review-button') Review Class
        button.button(id='update-profile-button') Update Profile
        button.button(id='cancel-membership-button') Cancel Membership
block content
